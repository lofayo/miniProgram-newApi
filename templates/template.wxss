/* templates/template.wxss */
.movie_container {
  padding: 24rpx;
  font-size: 24rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 24rpx;
}

.item_title {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
}

.more {
  color: blue;
}
.movie_surface {
  width: 100%;
  height: 320rpx;
  margin-bottom: 8rpx;
}
.movie_title {
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment {
  margin-top: 8rpx;
}
.star {
  width: 16rpx;
  height: 16rpx;
}
.movie_item {
  width: 33.3%;
  float: left;
  padding-right: 24rpx;
  box-sizing: border-box;
  margin-bottom: 36rpx;
}