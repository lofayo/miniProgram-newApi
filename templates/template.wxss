/* templates/template.wxss */
.movie_container {
  padding: 24rpx;
  font-size: 30rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 24rpx;
}

.item_title {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
}

.movie_surface {
  width: 100%;
  height: 320rpx;
  margin-bottom: 8rpx;
}
.movie_title {
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment {
  margin-top: 8rpx;
}
.star {
  width: 16rpx;
  height: 16rpx;
}

.movie_item_box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}



.movie_item {
  width: 30%;
  margin-bottom: 36rpx;
  float:left;
}

/*搜索框模板的样式  */
.search_box {
   background-color: #00CD00; 
   padding: 12rpx;
}
.search_input {
  background-color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding-left: 48rpx;
}