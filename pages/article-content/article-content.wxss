/* pages/article-content/article-content.wxss */

.header {
  width: 750rpx;
  height: 400rpx;
  position: relative;
}
.header_img {
  width: 100%;
  height: 400rpx;
}
.music_icon {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.article_content_info {
  padding: 36rpx;
}
.article_release {
  font-size: 24rpx;
  color: #999;
}
.col_share {
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.col_share image {
  width: 100rpx;
  height: 100rpx;
  float: right;
}
.line {
  display: inline-block;
  width: 100%;
  height: 2rpx;
  background-color: #ccc;
  position: absolute;
  left: 0;
  top: 50%;
  z-index: -1;
}
.article_content_text {
  color: #666;
  font-size: 24rpx;
}