/* dobuan-movie/movie-subject/movie-subject.wxss */
@import "/templates/template.wxss";
.header {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.header::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
  opacity: 0.7;
}
.header_text {
  position: absolute;
  left: 50rpx;
  top:130rpx;
}
.images_large {
  width: 200rpx;
  height: 300rpx;
  margin: 0 auto;
  display: block;
  float: left;
}
.text {
  float: left;
  color: #fff;
}
.subject_title {
  font-size: 36rpx;
  
}
.subject_text {
  font-size: 24rpx;
  padding: 24rpx;
  color:#666;
}
.movie_summary {
  font-size: 24rpx;
  color:#000;
  text-indent: 2em;
}
text {
  display: inline-block;
  margin-top: 24rpx;
}
.movie_info_title {
  margin-top:36rpx;
  font-size:30rpx;
  color:black;
  font-weight: 700;
}
.review_info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.review_content {
  text-indent: 2em;
  margin-top: 24rpx;
}
.author_image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.hot_review_item {
  border-bottom: 1px dotted #ccc;
  padding: 20rpx;
}
.scroll_view {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.cast_info {
  box-sizing: border-box;
  width: 25%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cast_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.cast_name {
  display: inline-block;
  width: 100%;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_img {
  flex: none;
  width: 120rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin: 12rpx;
}