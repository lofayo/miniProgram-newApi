/* pages/movie/movie_template/movie_template.wxss */
page {
  padding: 20rpx;
  box-sizing: border-box;
}
.photo_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  font-size: 30rpx;
  margin-bottom: 36rpx;
}
.photo_item_img {
  width: 100%;
  margin-bottom: 24rpx;
}

.movie_container {
  padding: 24rpx;
  font-size: 30rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 24rpx;
}

.item_title {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
}

.movie_surface {
  width: 100%;
  height: 320rpx;
  margin-bottom: 8rpx;
}
.movie_title {
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment {
  margin-top: 8rpx;
}
.star {
  width: 16rpx;
  height: 16rpx;
}

.movie_item_box {
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}



.movie_item {
  width: 30%;
  margin-bottom: 36rpx;
  float:left;
}

/*搜索框模板的样式  */
.search_box {
   background-color: #00CD00; 
   padding: 12rpx;
}
.search_input {
  background-color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding-left: 48rpx;
}

/*评论样式开始  */
.box {
    font-size: 30rpx;
    color: #999;
}
.comment_review_logo {
    padding:24rpx 0;
    color: #000;
    font-weight: bold;
}

.comment_review_item {
    border-bottom: 1px dotted #ccc;
    /* margin-bottom: 24rpx; */
}

.comment_review_info {
    padding: 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.comment_review_info text{
  padding-top:0;
}
.author_image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.preview_title {
  color:#666;
  font-weight: bold;
  padding-bottom: 24rpx;
  max-width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.comment_review_centent {
    text-indent: 2em;
    padding-bottom: 24rpx;
}
/*评论样式结束  */