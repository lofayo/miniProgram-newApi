/* pages/movie/movie_cast/movie_cast.wxss */

@import '../movie_template/movie_template.wxss';

page {
    font-size: 30rpx;
    padding: 0;
}

page>view {
    padding: 24rpx;
}

.cast_info {
    height: 500rpx;
    width: 100%;
    position: relative;
    color: black;
    padding: 0;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(20rpx);
}

.cast_info::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    z-index: 1;
    opacity: 0.3;
}

.cast_context {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.cast_title {
    font-size: 48rpx;
}

.cast_logo {
    width: 33%;
    height: 360rpx;
}

.cast_info_detail {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.cast_detail_item {
    margin: 12rpx 0;
}

.detail_item_title {
    color: #333;
}

.cast_summary {
    text-indent: 2em;
    color: #666;
}

.info_title {
    text-indent: 0;
    font-size: 36rpx;
    margin: 24rpx 0;
    color: #000;
}

.scroll_view {
    display: flex;
    flex-direction: row;
}

.movie_item {
    flex: none;
    margin: 0 24rpx;
}

.photo_item {
    flex: none;
    width: 30%;
    margin: 24rpx;
    height: 320rpx;
}

image {
    border-radius: 8rpx;
}

