/* pages/movie/movie-search/movie-search.wxss */
@import "/templates/template.wxss";

.search_histrory {
 width: 100%;
  max-height:400rpx;
  overflow-y:auto;
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: 2;
  color: black;
}
 .search_histrory::before {
  content: '';
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: #ddd;
  opacity: 0.8;
} 
.search_histrory text{
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}
.search_histrory_title {
  background-color: #ddd;
}