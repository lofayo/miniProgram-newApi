/* pages/myMovie/movieLists/movieLists.wxss */

.video_box {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.video_item {
  width: 30%;
}
.video_poster {
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
  position: relative;
}
.video_poster::after {
  content: '';
  display: inline-block;
  width: 72rpx;
  height: 72rpx;
  background: url('https://s1.ax2x.com/2018/06/09/R6etQ.png') no-repeat center / cover;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.video_name {
  display: inline-block;
  font-size: 30rpx;
  color: #666;
  width: 100%;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}